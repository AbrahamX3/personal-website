---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Page not found">
  <section class="flex justify-center items-center align-middle h-screen">
    <div class="text-center text-white flex flex-col items-center align-middle">
      <h1 class="text-4xl sm:text-6xl mb-4 font-bold">Page Not Found</h1>
      <a
        title="Go Back"
        href="/"
        class="font-medium flex space-x-2 items-center align-middle hover:text-sky-200 text-xl transition-colors ease-in duration-150"
      >
        <span>Go Back</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"></path>
        </svg>
      </a>
    </div>
  </section>
</Layout>
