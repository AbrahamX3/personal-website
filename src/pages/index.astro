---
import SpotifyPlayer from "../components/SpotifyPlayer";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Abraham | Web Developer">
  <section
    class="h-screen min-h-screen snap-end py-8 text-white justify-center leading-relaxed align-middle"
  >
    <div class="p-4 mx-auto bg-black/95 flex flex-col justify-between">
      <div class="text-center">
        <h2 class="text-4xl md:text-5xl font-bold">Hello, I'm Abraham!</h2>
        <div
          class="text-base md:text-xl font-mono max-w-xl mx-auto text-center pt-3"
        >
          I'm a Web Developer that likes exploring all type of web technogies!
        </div>
      </div>
      <div class="flex justify-center align-middle items-center pt-12">
        <SpotifyPlayer client:load />
      </div>
    </div>
  </section>
</Layout>
