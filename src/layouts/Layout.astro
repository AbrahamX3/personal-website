---
import "../styles/base.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html
  lang="en"
  class="scroll-smooth scrollbar-track-white/20 scrollbar-thumb-rounded-md scrollbar-thin scrollbar-thumb-white/60 selection:bg-transparent selection:text-black/50"
>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=5, minimum-scale=1, viewport-fit=cover"
    />
    <meta
      name="description"
      content="Abraham's Personal Website - Web Developer"
    />
    <meta property="og:url" content="http://abraham-dev.tech/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Abraham | Web Developer" />
    <meta
      name="description"
      content="Abraham's Personal Website - Web Developer"
    />
    <meta
      property="og:description"
      content="Abraham's Personal Website - Web Developer"
    />
    <meta property="og:image" content="https://www.abraham-dev.tech/logo.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="abraham-dev.tech" />
    <meta property="twitter:url" content="http://abraham-dev.tech/" />
    <meta name="twitter:title" content="Abraham | Web Developer" />
    <meta
      name="twitter:description"
      content="Abraham's Personal Website - Web Developer"
    />
    <meta
      name="twitter:image"
      content="https://www.abraham-dev.tech/logo.png"
    />
    <link rel="icon" type="image/svg+xml" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script>
      import { inject } from "@vercel/analytics";
      inject();
    </script>
  </head>
  <body
    class="font-nunito body-bg"
  >
    <slot />
  </body>
</html>
